{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "client",
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    ".git",
    ".vscode",
    "controllers",
    "dump",
    "models",
    "node_modules",
    "public",
    "routes",
    "tests"
  ]
}
